<div
  class="block py-5 px-5"
  data-controller="facility"
  data-latitude="<%= @facility.latitude %>"
  data-longitude="<%= @facility.longitude %>"
  data-facility-maptiler-key-value="<%= Rails.application.credentials.public_maptiler_key %>"
>
  <div class="mx-auto">
    <%= link_to 'Zur Übersicht', facilities_path, class: "inline-block
    font-medium mb-16 text-neutral-600" %>
    <div class="grid gap-4 grid-cols-2">
      <div>
        <h1 class="text-3xl font-bold text-lime-600 italic">
          <%= @facility.title %>
        </h1>
        <p class="text-neutral-600"><%= @facility.service %></p>
        <% unless @facility.focus_groups.empty? %>
          <div class="mt-2 transition-transform group-hover:translate-x-2">
            <% @facility.focus_groups.each do |focus_group| %>
              <span class="bg-lime-50 text-lime-700 text-sm rounded-md px-1 py-0.5 border border-lime-700 transition-colors hover:bg-lime-700 hover:text-white"><%= link_to focus_group.label, focus_group_path(focus_group) %></span>
            <% end %>
          </div>
        <% end %>
        <p class="mt-4 text-neutral-600 text-sm">
          <b>Angebot von:</b> <br />
          <%= @facility.provider %>
        </p>
      </div>
      <div>
        <div id="facility-map" class="w-full h-72"></div>
        <p><%= @facility.address %></p>
        <p><%= @facility.postal_code %> <%= @facility.city %></p>
        <p>Bezirk: <%= @facility.district %></p>
      </div>
    </div>
    <div class="mt-6 mb-32">
      <% if @facility.email %> <%= link_to 'E-Mail schreiben',
      "mailto:#{@facility.email}", class: 'inline-block p-3 bg-lime-600
      text-white' %> <% end %> <% if @facility.website %> <%= link_to 'Website',
      "https://#{@facility.website}", class: 'inline-block p-3 bg-lime-600
      text-white' %> <% end %> <% if @facility.phone %>
      <p class="inline-block p-3 bg-lime-100 text-lime-600">
        Tel.: <%= @facility.phone %>
      </p>
      <% end %>
    </div>
    <%= link_to 'Bearbeiten', edit_facility_path(@facility), class: "mt-2 py-3
    px-5 bg-gray-100 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Löschen', facility_path(@facility), method: :delete, class:
      "mt-2 py-3 px-5 bg-gray-100 text-red-500 font-medium" %>
    </div>
  </div>
</div>
