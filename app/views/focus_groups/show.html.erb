<div class="container mx-auto mt-8">
  <h1 class="font-bold text-4xl text-neutral-600"><%= @focus_group.label %></h1>
  <ul class="mt-8 list-disc list-inside">
    <% @focus_group.facilities.each do |facility| %>
      <li><%= link_to facility.title, facility_path(facility), class: 'underline text-lime-600 transition-colors hover:text-lime-400 italic text-xl font-bold' %></li>
    <% end %>
  </ul>
</div>
